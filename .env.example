# ============================================================================
# EX-AI-MCP-Server - Main Environment Configuration Template
# ============================================================================
# This is a template file. Copy to .env and fill in your actual values
# Last Updated: 2025-11-13

# ============================================================================
# CORE CONFIGURATION
# ============================================================================
ENVIRONMENT=development
ENV_FILE=C:/Project/EX-AI-MCP-Server/.env
PYTHONUNBUFFERED=1
PYTHONIOENCODING=utf-8
LOG_LEVEL=INFO

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================
EXAI_WS_HOST=127.0.0.1
EXAI_WS_PORT=3010
SHIM_LISTEN_PORT=3005
EXAI_WS_TOKEN=your_websocket_token_here
EX_SESSION_SCOPE_STRICT=true
EX_SESSION_SCOPE_ALLOW_CROSS_SESSION=false

# ============================================================================
# AI PROVIDER CONFIGURATION
# ============================================================================

# MiniMax M2 API
MINIMAX_ENABLED=true
MINIMAX_M2_KEY=your_minimax_m2_key_here
MINIMAX_API_URL=https://api.minimax.io/anthropic
MINIMAX_TIMEOUT=5
MINIMAX_RETRY=2

# ============================================================================
# GLM CONFIGURATION (Zhipu AI)
# ============================================================================
GLM_API_KEY=your_glm_api_key_here
GLM_API_URL=https://api.z.ai/api/paas/v4

# Core Models
GLM_DEFAULT_MODEL=glm-4.5-flash
GLM_QUALITY_MODEL=glm-4.6
GLM_EMBED_MODEL=embedding-2

# Preferred Models (comma-separated) - ALL AVAILABLE GLM MODELS
GLM_PREFERRED_MODELS=glm-4.6,glm-4.5,glm-4.5v,glm-4.5-air,glm-4.5-airx,glm-4.5-flash,glm-4-32b

# Settings
GLM_MAX_OUTPUT_TOKENS=8192
GLM_TIMEOUT_SECS=120
GLM_ENABLE_WEB_BROWSING=true
GLM_ACCEPT_LANGUAGE=en-US,en
GLM_BASE_URL=https://api.z.ai/api/paas/v4

# ============================================================================
# KIMI CONFIGURATION (Moonshot AI)
# ============================================================================
KIMI_API_KEY=your_kimi_api_key_here
KIMI_API_URL=https://api.moonshot.ai/v1

# Core Models
KIMI_DEFAULT_MODEL=kimi-k2-0905-preview
KIMI_QUALITY_MODEL=kimi-k2-0905-preview
KIMI_SPEED_MODEL=kimi-k2-turbo-preview
KIMI_THINKING_MODEL=kimi-thinking-preview
KIMI_EMBED_MODEL=text-embedding-3-large

# ============================================================================
# TIMEOUT CONFIGURATION
# ============================================================================
SIMPLE_TOOL_TIMEOUT_SECS=30
WORKFLOW_TOOL_TIMEOUT_SECS=46
EXPERT_ANALYSIS_TIMEOUT_SECS=60

# ============================================================================
# ROUTER CONFIGURATION (for Hybrid Router)
# ============================================================================
FAST_MODEL_DEFAULT=glm-4.5-flash
LONG_MODEL_DEFAULT=kimi-k2-0905-preview
ROUTER_DIAGNOSTICS_ENABLED=true
ROUTER_CACHE_TTL=300
HYBRID_CACHE_TTL=300
HYBRID_FALLBACK_ENABLED=true
ROUTER_LOG_LEVEL=INFO

# ============================================================================
# MONITORING & METRICS
# ============================================================================
TZ=Australia/Melbourne

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
DEBUG=false

# ============================================================================
# PROVIDER-SPECIFIC SETTINGS
# ============================================================================
# Additional provider configuration can be added here as needed
