import os
import sys
from urllib.parse import urlparse

def validate_environment():
    required_vars = {
        'LLM_GATEWAY_BASE_URL': validate_url,
        'AGENT_NAME': validate_string,
    }
    
    optional_vars = {
        'RAPIDAPI_KEY': validate_api_key,
        'PROXY_USERNAME': validate_string,
        'PROXY_PASSWORD': validate_string,
    }
    
    # Check required variables
    for var_name, validator in required_vars.items():
        if not validator(os.getenv(var_name)):
            print(f"ERROR: Required environment variable '{var_name}' is missing or invalid")
            sys.exit(1)
    
    # Check optional variables with warnings
    for var_name, validator in optional_vars.items():
        value = os.getenv(var_name)
        if value and not validator(value):
            print(f"WARNING: Optional environment variable '{var_name}' is invalid")

def validate_url(url):
    if not url:
        return False
    try:
        result = urlparse(url)
        return all([result.scheme, result.netloc])
    except:
        return False

def validate_string(value):
    return value and len(value.strip()) > 0

def validate_api_key(key):
    return key and len(key) > 10

# Run validation at startup
if __name__ == "__main__":
    validate_environment()
    print("Environment validation passed")
