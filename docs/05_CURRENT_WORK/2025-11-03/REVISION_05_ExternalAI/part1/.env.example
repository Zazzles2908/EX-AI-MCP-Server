# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================
# Base URL for the LLM Gateway API
LLM_GATEWAY_BASE_URL=https://your-api-gateway.example.com

# API key for LLM Gateway authentication
LLM_GATEWAY_API_KEY=your-api-key-here

# =============================================================================
# EXTERNAL API CONFIGURATION (RapidAPI and others)
# =============================================================================
# Primary RapidAPI key for multiple services
RAPIDAPI_KEY=your-rapidapi-key-here

# Individual service API keys (optional - use RAPIDAPI_KEY if available)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
YAHOO_API_KEY=your-yahoo-api-key
BOOKING_API_KEY=your-booking-api-key
PINTEREST_API_KEY=your-pinterest-api-key
TRIPADVISOR_API_KEY=your-tripadvisor-api-key
COMMODITIES_API_KEY=your-commodities-api-key
METAL_API_KEY=your-metal-api-key

# =============================================================================
# PROXY CONFIGURATION (Optional)
# =============================================================================
# HTTP/HTTPS proxy settings for API calls
HTTP_PROXY=http://proxy.example.com:8080
HTTPS_PROXY=https://proxy.example.com:8080
PROXY_USERNAME=your-proxy-username
PROXY_PASSWORD=your-proxy-password

# =============================================================================
# BROWSER CONFIGURATION
# =============================================================================
# Chrome debugging port (default: 9222)
CHROME_DEBUG_PORT=9222

# Browser mode: true for headless, false for GUI
BROWSER_HEADLESS=true

# SECURITY WARNING: Never set this to true in production
# This disables CORS and other browser security features
DISABLE_BROWSER_SECURITY=false

# Browser extension path (optional)
BROWSER_EXTENSION_PATH=/path/to/extension

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Agent identifier for logging and monitoring
AGENT_NAME=my-application-agent

# Function server port (default: 12306)
FUNC_SERVER_PORT=12306

# Request timeout in seconds (default: 3600)
SERVER_TIMEOUT=3600

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable CORS protection (should always be true in production)
CORS_ENABLED=true

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per minute per IP
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# JWT secret for authentication (generate a strong random key)
JWT_SECRET=your-jwt-secret-key-here

# Session timeout in seconds
SESSION_TIMEOUT=3600

# =============================================================================
# DATABASE CONFIGURATION (if applicable)
# =============================================================================
# Database URL (if using database)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Database connection pool size
# DB_POOL_SIZE=10

# Database connection timeout
# DB_TIMEOUT=30

# =============================================================================
# MONITORING AND METRICS
# =============================================================================
# Enable metrics collection
METRICS_ENABLED=true

# Metrics endpoint port
METRICS_PORT=9090

# Health check endpoint
HEALTH_CHECK_ENABLED=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable development features (should be false in production)
DEV_MODE=false

# Enable verbose logging (development only)
VERBOSE_LOGGING=false

# Enable hot reloading (development only)
HOT_RELOAD=false

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit .env files to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate API keys and secrets regularly
# 4. Use environment-specific configurations
# 5. Validate all configuration values at startup
# 6. Monitor for configuration changes
# 7. Use secrets management tools in production
# 8. Never disable security features in production
# 9. Implement proper access controls
# 10. Log all configuration errors and warnings

