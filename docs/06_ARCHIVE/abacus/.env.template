# Deepagent Configuration Environment Variables
# Copy this file to .env and fill in your actual values

# Abacus.ai Configuration
ABACUS_API_KEY=your_abacus_api_key_here
ABACUS_PROJECT_ID=your_project_id_here
DEEPAGENT_WORKSPACE=ex-ai-mcp-server

# MCP Server Configuration (for deepagent understanding)
MOONSHOT_API_KEY=your_moonshot_key_here
GLM_API_KEY=your_glm_key_here

# Optional: Additional provider keys
OPENROUTER_API_KEY=your_openrouter_key_here
CUSTOM_API_URL=http://localhost:11434

# Deepagent Settings
DEEPAGENT_LOG_LEVEL=INFO
DEEPAGENT_MAX_WORKERS=4
DEEPAGENT_TIMEOUT=300

# Monitoring and Alerting
SLACK_WEBHOOK_URL=your_slack_webhook_here
EMAIL_NOTIFICATIONS=your_email@example.com

# Security Settings
ENABLE_SECURITY_AUDIT=true
SECURITY_SCAN_FREQUENCY=weekly
COMPLIANCE_FRAMEWORKS=OWASP,SOC2,PCI_DSS

# Performance Settings
MAX_CONCURRENT_ANALYSES=3
ANALYSIS_TIMEOUT=300
ENABLE_PERFORMANCE_MONITORING=true

# Reporting Settings
REPORT_OUTPUT_FORMAT=markdown
ENABLE_METRICS=true
ENABLE_RECOMMENDATIONS=true
REPORT_DIRECTORY=docs/abacus/reports